{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2020",
        "moduleResolution": "NodeNext",
        "declaration": true,
        "declarationDir": "./dist",
        "outDir": "./dist",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}